mixin section(klass, headline, graph)
  h2.block(class=klass || '')= headline
  p.block= graph

+section(
  "",
  "Modular and Flexible",
  "While Beaker’s notebook-style development environment supports multiple languages, the shell itself has no native language of it’s own. In order to use Beaker, you first need to install at least one programming language. To help get you started, Beaker will be installed with JavaScript support, as well as HTML and Markdown. After successfully setting up Beaker, you can then install any of the languages from the list below (full install instructions are provided for each)."
)
ul.getting-started-features
  li downloads per platform
  li install instruction per platform
  li what’s new in latest version (plus version history on demand)

+section(
  "section-split",
  "Supported Platforms",
  "Beaker currently supports Windows, Mac and Linux platforms. Browser support consists of Chrome, Safari and Internet Explorer 7+. "
)

ul.block.platforms.getting-started#getting-started
  li.linux(class= OS == 'linux' ? 'active' : '', data-platform='linux')
    .label Linux
  li.mac(class= OS == 'osx' ? 'active' : '', data-platform='osx')
    .label Mac OS
  li.windows(class= OS == 'windows' ? 'active' : '', data-platform='windows')
    .label Windows

.install-instructions
  != templates[OS+"-install"]()

h2.block Release History
.release-history
