.languages
  margin: auto
  max-width: 870px
.language
  display: inline-block
  width: 72px
  margin: 0 1.5% 48px 1.5%
  font-family: $font-family-primary-bold

  .lang-block
    height: 65px

  .label
    color: #585c60
    margin-top: 10px
    text-align: center
  &.html5
    .lang-block
      background: #e54f1f
  &.r
    .lang-block
      background: #8394bd

  &.julia
    .lang-block
      background: #6cad5a

  &.kdb
    .lang-block
      background: #005e99

  &.clojure
    .lang-block
      background: #5881d8

  &.node
    .lang-block
      background: #8cc64b

  &.python
    .lang-block
      background: #efbe3a

  &.ruby
    .lang-block
      background: #b11400

  &.scala
    .lang-block
      background: #b41703

  &.java
    .lang-block
      background: #eb0000

  &.latex
    .lang-block
      color: #000

  &.javascript
    .lang-block
      background: #f0dd44
      color: #4a4a4a

  &.groovy
    .lang-block
      background: #6297aa

  &.sql
    .lang-block
      background: #f8981c

  &.cpp
    .lang-block
      background: #4757b8

.lang-block
  text-align: center
  width: 100%
  height: 100%
  line-height: 70px
  font-size: 34px
  color: #FFF
  box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.18)

.text-center
  text-align: center
