.btn
  color:      #FFF
  cursor:     pointer
  display:    inline-block
  padding:    5px 10px
  background: #30a8f0

  &.large
    padding: 20px 31px
    font-size: 18px
    font-size: 19px
    box-shadow: 0px 2px 2px #000

h2
  color:      $green
  font-size:  32px
  text-align: center
  font-family: $font-family-light

a.ui-link
  color: #30A8F0
  text-decoration: none

pre.code
  color: $green
  line-height: 25px
  font-family: monospace
