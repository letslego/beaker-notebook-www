@media screen and (max-width: 640px)
  .header-nav
    &.headroom--not-top
      position: relative

    ul li
      width: 100%
      text-align: center
      display: block

      &.active:before, &.active:hover:before
        display: none

@media screen and (max-width: 800px)
  .examples
    img
      margin-bottom: 20px

    .col-1-3, .col-2-3
      width: 100%
      padding: 0

  .language
    margin: 0 4%
    width: 25%

  .language-details
    margin-left: 0
    margin-top: 20px
    clear: both

  .platforms.getting-started li
    width: 23%

  .overview
    .platforms li
      width: 33%;
      display: inline-block;
      position: relative;
      margin: 10px 0;

      &.split
        display: none

  .header-content
    margin-top: 30px

    .col-2-3
      width: 100%
      text-align: center

      img
        margin-bottom: 20px

    .col-1-3
      width: 100%
      margin-top: 37px
      text-align: center
      padding-right: 0

    .os-download
      display: none
