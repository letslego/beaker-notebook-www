#modal
  position: fixed
  top: 20%
  left: 50%
  width: 400px
  transform: translateX(-50%)
  background: #fff
  padding: 20px 40px
  border-top: solid 3px $blue
  box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.12)
  display: none

  h5
    font-family: 'pt_sansbold'
    margin-bottom: 10px

  p
    font-size: 14px

  .close
    position: absolute
    top: 14px
    right: 10px
    cursor: pointer
    font-weight: bold
    color: #A2A2A2
    font-size: 13px
